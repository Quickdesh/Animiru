<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    tools:ignore="RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exo_overlay_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="@string/player_overlay_back"
            android:textSize="16sp"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/exo_overlay_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:textSize="16sp"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/watcher_controls_autoplay"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/watcher_controls_settings"
            android:contentDescription="@string/action_player_autoplay"
            android:switchMinWidth="64dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <ImageButton
            android:id="@+id/watcher_controls_settings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/action_player_settings"
            android:src="@drawable/ic_watcher_settings" />



    </RelativeLayout>


    <ImageButton
        android:id="@+id/watcher_controls_prev"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/watcher_controls_prev_space"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/action_previous_episode"
        android:src="@drawable/ic_watcher_previous" />

    <View
        android:id="@+id/watcher_controls_prev_space"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/watcher_controls_p_space"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center" />

    <View
        android:id="@+id/watcher_controls_p_space"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center" />

    <ImageButton android:id="@id/exo_play"
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_watcher_play"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/action_play" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/action_pause"
        android:src="@drawable/ic_watcher_pause" />

    <View
        android:id="@+id/watcher_controls_next_space"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/watcher_controls_p_space"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/watcher_controls_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/watcher_controls_next_space"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/action_next_episode"
        android:src="@drawable/ic_watcher_next" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layoutDirection="ltr"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/watcher_controls_fit_screen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/action_screen_fit"
                android:src="@drawable/ic_watcher_screen_orientation" />

            <ImageButton
                android:id="@+id/watcher_controls_playlist"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/watcher_controls_fit_screen"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/action_player_playlist"
                android:src="@drawable/ic_watcher_playlist" />


            <ImageButton
                android:id="@+id/watcher_controls_pip"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/action_player_pip"
                android:src="@drawable/ic_watcher_pip"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/watcher_controls_skip_btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/watcher_controls_pip"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/watcher_controls_skip_text"
                android:textSize="16sp"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView android:id="@id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="15dp"
                android:paddingEnd="4dp"
                android:includeFontPadding="false"
                android:textColor="@color/md_white_1000"/>

            <com.google.android.exoplayer2.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="26dp"
                buffered_color="?attr/colorOnSurface"/>

            <TextView android:id="@id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="15dp"
                android:includeFontPadding="false"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>